<% cache post do %>
  <div class="col-md-8 col-sm-6 col-xs-12 post-list">
    <p><%= post.posted.strftime("%B %d, %Y" ) %></p>
    <p><%= post.title %></p>
    <p><%= post.content %></p>
    <%= link_to image_tag(post.image_url, id: "post-image", class: "img-responsive")  %>
    <p>Posted by Ryan Patterson at <%= post.posted.strftime("%l:%M%P") %></p>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>